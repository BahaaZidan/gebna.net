{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build && wrangler deploy",
		"lint": "eslint .",
		"format": "prettier --write .",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"tail": "wrangler tail",
		"db:dev": "turso dev --db-file local.db",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "dotenv -e .env.local -- drizzle-kit migrate",
		"db:migrate:prod": "dotenv -e .env.prod -- drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@gebna/validation": "workspace:*",
		"@libsql/client": "^0.15.15",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"argon2-wasm-edge": "^1.0.23",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4",
		"postal-mime": "^2.6.0",
		"ulid": "^3.0.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.2.3",
		"@eslint/js": "^9.39.1",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"typescript-eslint": "^8.46.3",
		"vite": "^6.3.5",
		"vite-ssr-components": "^0.5.1",
		"wrangler": "^4.17.0"
	}
}
