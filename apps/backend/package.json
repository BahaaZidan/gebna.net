{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build && wrangler deploy",
		"lint": "eslint .",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write .",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"tail": "wrangler tail",
		"db:dev": "turso dev --db-file local.db",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "dotenv -e .env.local -- drizzle-kit migrate",
		"db:migrate:prod": "dotenv -e .env.prod -- drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "dotenv -e .env.local -- tsx src/scripts/seed.ts",
		"graphql:generate": "graphql-codegen --config ./graphql.config.ts"
	},
	"dependencies": {
		"@gebna/validation": "workspace:*",
		"@libsql/client": "^0.15.15",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"argon2-wasm-edge": "^1.0.23",
		"drizzle-orm": "^0.44.7",
		"graphql": "^16.12.0",
		"graphql-scalars": "^1.25.0",
		"graphql-yoga": "^5.17.1",
		"hono": "^4.10.4",
		"js-base64": "^3.7.8",
		"postal-mime": "^2.6.0",
		"remeda": "^2.32.0",
		"ulid": "^3.0.1",
		"xss": "^1.0.15"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.2.3",
		"@eslint/js": "^9.39.1",
		"@gebna/types": "workspace:*",
		"@graphql-codegen/add": "^6.0.0",
		"@graphql-codegen/cli": "^6.1.0",
		"@graphql-codegen/typescript": "^5.0.6",
		"@graphql-codegen/typescript-resolvers": "^5.1.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/aws-lambda": "^8.10.159",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"graphql-config": "^5.1.5",
		"tsx": "^4.21.0",
		"typescript-eslint": "^8.46.3",
		"vite": "^6.3.5",
		"vite-plugin-watch-and-run": "^1.7.5",
		"vite-ssr-components": "^0.5.1",
		"wrangler": "^4.17.0"
	}
}
