		"argon2-wasm-edge": "^1.0.23",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4",
		"postal-mime": "^2.6.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.2.3",
		"drizzle-kit": "^0.31.6",
		"vite": "^6.3.5",
